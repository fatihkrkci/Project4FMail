@model Message

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Mesaj Detayları</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">FMail</a></li>
            <li class="breadcrumb-item active">Mesaj Detayları</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="card col-12">
        <div class="card-body">
            <h1>@Model.Subject</h1>

            <div>
                <strong>Gönderen:</strong> @Model.SenderMail
            </div>
            <div>
                <strong>Tarih:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
            </div>

            <hr />

            <div>
                @{
                    var plainTextContent = System.Net.WebUtility.HtmlDecode(Model.Content ?? string.Empty);
                }
                <div>
                    @Html.Raw(plainTextContent)
                </div>
            </div>
        </div>
    </div>
</div>



